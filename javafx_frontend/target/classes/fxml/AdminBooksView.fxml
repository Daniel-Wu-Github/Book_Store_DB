<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml" fx:controller="com.bookstore.fx.controller.AdminController" spacing="8">
    <padding><Insets top="8" left="8" right="8" bottom="8"/></padding>
    <children>
        <HBox spacing="8">
            <children>
                <Button text="Refresh" onAction="#onRefreshBooks"/>
                <Button text="New Book" onAction="#onNewBook"/>
                <Button text="Delete Book" onAction="#onDeleteBook"/>
                <Label fx:id="booksStatus"/>
            </children>
        </HBox>
        <TableView fx:id="adminBooksTable" prefHeight="360">
            <columns>
                <TableColumn fx:id="bIdCol" text="ID" prefWidth="60"/>
                <TableColumn fx:id="bTitleCol" text="Title" prefWidth="200"/>
                <TableColumn fx:id="bAuthorCol" text="Author" prefWidth="160"/>
                <TableColumn fx:id="bPriceCol" text="Price" prefWidth="80"/>
                <TableColumn fx:id="bStockCol" text="Stock" prefWidth="80"/>
            </columns>
        </TableView>
    </children>
</VBox>
